.github-only {
  display: none;
}

.text-primary {
  color: $primaryColor;
}
.text-danger {
  color: $dangerColor;
}
.text-warning {
  color: $warningColor;
}
.text-info {
  color: $infoColor;
}
.text-success {
  color: $successColor;
}

.theme-default-content:not(.custom),
.page-nav,
.page-edit,
footer {
  margin: 0 !important;
}

.theme-default-content:not(.custom) > h2 {
  padding-top: 7rem;
}

.navbar .site-name {
  display: none;
}

.navbar, .navbar .links {
  background-color: $primaryColor !important;
}

img {
  border: 5px solid #f7f7f7;
}

header img {
  border: none;
}

.mini-img {
  text-align: center;
}

.theme-default-content:not(.custom) .mini-img img {
  max-width: 300px;
}
